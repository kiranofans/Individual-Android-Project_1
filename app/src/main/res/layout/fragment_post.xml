<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_fragment"
    tools:showIn="@layout/activity_posts"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/postConst"
            android:layout_margin="3dp"
            android:background="@color/color_dark_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_all_txt"
                android:layout_margin="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintEnd_toStartOf="@id/adminTxt"
                app:layout_constraintStart_toStartOf="parent"
                android:text="全部主题"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adminTxt"
                android:text="版主：TAKI, Vicky.Robin, 落地成灰, Revin, 大娘, Dark, 巴黎街頭藝人, 末子酱"
                app:layout_constraintStart_toEndOf="@+id/title_all_txt"
                android:layout_margin="3dp"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:autoSizeTextType="uniform"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/postRecView_2"
            android:layout_below="@+id/postConst"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="115dp"/>
        <TextView
            android:id="@+id/secTitle"
            android:layout_below="@+id/postRecView_2"
            android:background="@color/color_dark_red"
            android:textColor="@android:color/white"
            android:paddingLeft="30dp"
            android:text="版塊主題"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_container"
            android:layout_below="@+id/secTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/post_recyc_view"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:fitsSystemWindows="true"
            app:contentScrim="#fff5d7"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <include layout="@layout/content_card_posts"/>
</RelativeLayout>